# ===========================================
# MICROSERVICIOS - NODE.JS
# ===========================================

# Dependencies
services/*/node_modules/
services/*/jspm_packages/
services/*/web_modules/
services/*/bower_components/

# Git repositories in subdirectories
services/*/.git/

# Package lock files (regenerated automatically)
services/*/package-lock.json
services/*/yarn.lock
services/*/pnpm-lock.yaml

# Build outputs (exclude, but allow source code)
services/*/build/
services/*/dist/
services/*/out/
services/*/.next/
services/*/.nuxt/
services/*/.svelte-kit/
services/*/.docusaurus/

# TypeScript cache (exclude, but allow source code)
services/*/*.tsbuildinfo
services/*/*.js.map

# Test coverage (exclude, but allow source code)
services/*/coverage/
services/*/*.lcov
services/*/.nyc_output/
services/*/lib-cov/

# IMPORTANT: Allow source code and configuration files
!services/*/src/
!services/*/package.json
!services/*/tsconfig.json
!services/*/jest.config.ts
!services/*/Dockerfile*
!services/*/README.md
!services/*/.gitignore
!services/*/.npmrc
!services/*/.eslintignore

# Logs
services/*/logs/
services/*/*.log
services/*/npm-debug.log*
services/*/yarn-debug.log*
services/*/yarn-error.log*
services/*/lerna-debug.log*
services/*/.pnpm-debug.log*

# Runtime data
services/*/pids/
services/*/*.pid
services/*/*.seed
services/*/*.pid.lock

# Cache directories
services/*/.cache/
services/*/.parcel-cache/
services/*/.eslintcache
services/*/.stylelintcache
services/*/.rpt2_cache/
services/*/.rts2_cache_cjs/
services/*/.rts2_cache_es/
services/*/.rts2_cache_umd/
services/*/.webpack/
services/*/.fusebox/
services/*/.grunt/

# Environment files
services/*/.env
services/*/.env.local
services/*/.env.development.local
services/*/.env.test.local
services/*/.env.production.local
# Allow .env.dev template files
!services/*/.env.dev

# NPM
services/*/.npm/
services/*/.yarn/
services/*/.yarn-integrity
services/*/.pnpm-debug.log*
services/*/*.tgz

# REPL history
services/*/.node_repl_history

# Serverless
services/*/.serverless/

# DynamoDB
services/*/.dynamodb/

# TernJS
services/*/.tern-port

# VSCode test
services/*/.vscode-test/

